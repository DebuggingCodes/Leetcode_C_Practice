    int i=0,rem;
    while(given>0){
        int divisor=1,divi;
        for(int j=0;j<i;j++){
            divisor*=10;
            divi=10;
        }
        printf("Given = %d \t ", given);
        given/=divi;
        printf("Given = %d \t ", given);
        rem = given%10;
        answer=answer+ (rem*divisor);
        i++;
        printf("%d\t%d %d\n",rem, divisor,answer);
    }
