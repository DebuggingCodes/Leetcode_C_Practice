#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
void sortLetters(char* word,int length){
    for(int i =0;i<length;i++){
        for(int j=i+1;j<length;j++){
            if(word[i]>word[j]){
                char temp=word[i];
                word[i]=word[j];
                word[j]=temp;
            }
        }
    }
}
int* charcount(char* word,int length){
    int* count=(int*)malloc(length*sizeof(int));
    int i=0,j=0;
    for(int m=0;m<length;m++){
        while(word[i]==word[j]){
            i++;
        }
        count[m]=i-j;
        j=i;
    }
    return count;
}
